{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    {{#with main}}
    <div class="row">
       <div class="col-12">
        <div class="row g-2">
        <div class="col">
            <div class="card">
                <div class="card-header">
                    {{> title data='My Educations' big=true}}
                </div>
                <div class="card-body">                    
        {{#each educations}}
        <ul>
            <li>{{name}}
                {{year}}
                {{#unless isEnd includeZero=false}} 
                <span class="badge rounded-pill text-bg-warning">
                    in Progress
                </span>
                {{/unless}}
        </li>
        </ul>
        {{/each}}
                </div>        
            </div>
       </div>
       
        <div class="col">
            <div class="row g-2">
                <div class="card">
                        <div class="card-header">
                            {{> title data='My Certificates' big=true}}
                        </div>
                        <div class="card-body"> 
        {{#each certificates}}
        <ul>
            <li>{{name}}
                ({{id}})
            </li>
        </ul>
        {{/each}}
                            </div>
                    </div>
            </div>
        </div>
        
    </div>
    {{/with}}

</main>

