<main>
    <div>
        {{>breadcrumb}}
    </div>

    <div class="row">
        <div class="h1">{{header}}</div> 
        {{#each sortBlock}}
        <div class="col-2 mb-4">           
            <select class="form-select">
            <option selected>{{placeholder}}</option>
            {{#each options}}
            <option>{{text}}</option>
            {{/each}}
            </select>    
        </div>
        {{/each}}
    </div>

    <div class="row g-5">
        {{!-- filterBlock --}}
        <div class="col-4">
            <div class="card p-2">
                
                <div class="card-body">
                    <div class="mb-2">{{filterBlock.sellers.title}}</div>
                   <div class="form-check">
                     
                   {{#each filterBlock.sellers.list}}
                   <div class="col">                    
                    <input type="checkbox" class="form-check-input">
                    <option>{{value}}</option> 
                    {{/each}}
                    </div>
                   </div>
                   </div>
                   <hr>

                   <div class="mb-2">{{filterBlock.brands.title}}</div>
                   <div class="form-serch mb-2">
                    <input type="search" placeholder="{{filterBlock.brands.input.placeholder}}">
                   </div>
                   
                   <div class="form-check mb-2">
                    {{#each filterBlock.brands.options}}
                    <input type="checkbox" class="form-check-input">
                     <option>{{value}}</option> 
                     {{/each}}    
                    </div>
                    <hr>

                    <div class="mb-2">{{filterBlock.price.title}}</div>
                    <div class="row">
                        <div class="col-5">
                            <div class="form-serch mb-2">
                            <input type="search" class="col-8" placeholder="{{filterBlock.price.range.from}}">
                            </div>
                        </div>
                        <div class="col-5">
                            <div class="form-serch mb-2">
                            <input type="search" class="col-8" placeholder="{{filterBlock.price.range.to}}">
                            </div>
                        </div>
                        <div class="col-2">
                            <div>
                                <a href="{{filterBlock.price.button.link}}" class="btn btn-outline-dark">{{filterBlock.price.button.text}}</a>
                            </div>
                        </div>
                       
                    </div>
                     <hr>                     
                                             
                     <div class="form-check mb-2">
                        {{#each filterBlock.filterList}}
                        <div class="mb-1 mt-3">{{title}}</div>
                        {{#each options}}
                        <input type="checkbox" class="form-check-input">
                         <option>{{value}}</option> 
                         {{/each}}
                         <hr>
                         {{/each}}
                     </div>

                </div>
            </div>
        </div>
        <div class="col-8">
            {{>catalogItem}}
        </div>
        
        {{#with service}}
    <div class="container mt-5">
        <div class="alert text-bg-success">
            <div class="row g-1">
                <div class="h2 text-light text-center">{{title}}</div>
            </div>
            <div class="row g-1">
                <p class="text-light text-center">{{description}}</p>
            </div>
            {{#each buttons}}
            <div class="row g-1">
                <div class="text-center">
                    <a href="{{link}}" rel="{{rel}}" type="button" class="btn btn-primary text-center">{{text}}</a>
                </div>
            {{/each}}
            </div>
        </div>
    </div>
    {{/with}}
        <div>
            {{>shopfooter}}
        </div>
    </div>
</main>