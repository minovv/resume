<main>
    {{!-- Navigation --}}
    {{#with navigation}}
    <div class="container">
        <div class="row">
    <div class="col-sm-4 h1">{{Logo}}</div>
    
    <div class="col-sm-8">
        
        <ul class="nav justify-content-end">
            
            {{#each links}}
            <li class="nav-item">       
                <a class="nav-link active" href="{{href}}">{{text}}</a>
            </li>            
            {{/each}}
            <li class="nav-item">       
                <a class="nav-link disabled" href="{{href}}">Disabled</a>
            </li>            
        </ul> 
    </div>
    </div>
    {{/with}}

    {{!-- News Block --}}
    {{#with newsBlock}}
    <div class="row text-center mt-5 mb-3">
            <div class="h1">{{title}}</div>

    </div>
    {{/with}}

    <div class="row g-1">
        {{#each newsBlock.cards}}
        <section class="col-3">
            
            <div class="card">
                
                <div class="card-header">
                    {{title}}
                    {{#if isTop}}
                    <span class="badge rounded-pill text-bg-danger">Top</span>
                    {{/if}}
                    {{#if idNew}}
                    <span class="badge rounded-pill text-bg-success">New</span>
                    {{/if}}
                </div>
                
                <div class="card-body">
                    
                    <p>{{description}}</p>
                </div>
            </div>
            
        </section>
        {{/each}}
    </div>
    <hr>

    {{!-- Goods Block --}}
    
    <div>
        {{#each goodsBlock.tabs}}
        <ul class="nav nav-tabs">
            <li class="nav-item">
                {{#if isActive}}
                <a class="nav-link active">{{text}}</a>
                {{/if}}
                {{#if isDisabled}}
                <a class="nav-link disabled">{{text}}</a>
                {{/if}}
            </li>
            {{/each}}
        </ul>
        </div>

        
        <diV class="row g-1">
            {{#each goodsBlock.cards}}
            <section class="col-4">
                <div class="card">
                    <img src="{{image}}" class="card-img-top" alt="{{title}}">
                    <div class="card-body">
                        <div class="h5">{{title}}
                            {{#if isHot}}
                            <span class="badge rounded-pill text-bg-warning">Hot</span>
                            {{/if}}
                             {{#if idNew}}
                            <span class="badge rounded-pill text-bg-primary">Hot</span>
                            {{/if}}
                        </div>
                        <p>
                            {{description}}
                        </p>
                    </div>

                </div>
            </section>
            {{/each}}
        </diV>
        
        
    </div>
    


    
   
    



    
  
</main>