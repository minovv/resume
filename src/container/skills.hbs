{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>    
    {{#with main}}
    <div class="row">
        <div class="col-6">
            <div class="row g-2">
                <div class="card p-0">
                    <div class="card-header">
                        {{> title big=true data='My Skills'}}  
                    </div>
                    <div class="card-body">
                        <ul>
                {{#each skills}}
                <li class="row">
                    <div class="col-8 ps-0">
                        {{name}}
                        {{#if isTop}}
                        <span class="badge rounded-pill text-bg-danger text-uppercase">
                             top
                             {{/if}}
                        </span>
                         {{#unless point includeZero=true}}
                         <span class="badge rounded-pill text-bg-info text-light">
                            not Studying
                         </span>
                          
                         {{/unless}}
                    {{#unless point}}
                    {{#if point includeZero=true}}
                    <span class="badge rounded-pill text-bg-warning"> 
                    in Progress 
                    {{/if}}                  
                    {{/unless}}                        
                    </div>
                    {{#if point includeZero=true}} 
                    <div class="col-4">{{point}} points</div> 
                    {{/if}}
                    
                   
                </li>
                {{/each}}
            </ul>
                    </div> 
                </div>
            </div>
        </div>
        <div class="col-6">
            <div class="row g-2">
                <div class="card p-0">
                    <div class="card-header">
                        {{> title big=true data='My Hobbies'}}  
                    </div>
                    <div class="card-body">
                        <ol>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain includeZero=true}} 
                    <span class="badge rounded-pill text-bg-danger">
                        favourite
                    </span> 
                    {{/if}}
                </li>
                {{/each}}
                </ol>
                    </div>                        
                </div>
            </div>
        </div>
    </div>                     
{{/with}}
</main>

