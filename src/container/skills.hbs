{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <div>            
            {{> title big=true data='My Skills'}}                 
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} {{point}} {{/if}}
                    {{#if isTop}} (top) {{/if}}
                    {{#unless point includeZero=true}} (not Studying) {{/unless}}
                    {{#unless point}}
                    {{#if point includeZero=true}} (in Progress) {{/if}}                  
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </div>
        <br/>
        <div>            
            {{> title data='My Hobbies'}}                 
            <ol>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain includeZero=true}} (favourite) {{/if}}
                </li>
                {{/each}}
            </ol>
        </div>             
    </main>
{{/with}}
</div>

