<div>
    {{> breadcrumbs}}
</div>

<main>
    {{!-- Contacts Data --}}
    <div class="container">
        <div class="row-12 g-2">
            <div class="h1 pt-2 pb-5">{{header}}</div>
            
            <div class="col-8">
                <div class="h2 mb-3">{{contacts_data.title}}</div>
                
                {{!-- Buttons --}}
                <div class="row pe-6 mb-4">
                    <div class="col">
                    {{#each contacts_data.buttons}}
                    {{#if isPrimary}}
                    <div class="mb-2"><a type="button" class="btn btn-warning text-light">{{text}}</a></div>
                    {{else}}
                </div>
                <div class="col">
                    <div><a type="button" class="btn btn-outline-warning">{{text}}</a></div>
                    {{/if}}
                    {{/each}}
                </div>
                </div>
                {{!-- Form --}}
                <div class="col-12">
                    <div class="row">
                        
                        {{#with contacts_data}}
                        {{#with form}}
                        {{#with input}}                    
                       
                        <div class="col-6">                             
                            <div class="mb-3">                            
                                <label class="form-label">{{surname.label}}</label>
                                <input class="form-control"placeholder="{{surname.placeholder}}">
                                    <div class="form-text">{{surname.caption}}</div>                            
                            </div>                        
                                                        
                        </div>

                        <div class="col-6">                                                        
                            <div class="mb-3">
                                <label class="form-label">{{name.label}}</label>
                                <input class="form-control" placeholder="{{name.placeholder}}">
                                    <div class="form-text">{{name.caption}}</div>
                            </div>
                        </div> 
                        
                        <div class="col-6">                                                        
                            <div class="mb-3">
                                <label class="form-label">{{phone.label}}</label>
                                <input class="form-control" placeholder="{{phone.placeholder}}">
                                    <div class="form-text">{{phone.caption}}</div>
                            </div>
                        </div> 

                        <div class="col-6">                                                        
                            <div class="mb-3">
                                <label class="form-label">{{email.label}}</label>
                                <input class="form-control" placeholder="{{email.placeholder}}">
                                    <div class="form-text">{{email.caption}}</div>
                            </div>
                        </div>
                        <hr class="ms-2 mt-3 mb-3">

                        {{!-- Switch --}}
                        {{#with ../switch}}
                        <div class="col-8">
                            <div>Test</div>
                        </div>
                        {{/with}}

                        </div>
                        {{/with}}      
                        {{/with}}
                        {{/with}}

                        <hr class="mt-3 mb-3">

                        {{!-- Delivery --}}
                        {{#with delivery}}                       
                        <div class="col-12">
                            <div class="row">
                                <div class="h3">{{title}}</div>
                                    {{#each select}} 
                                    <div class="col-6">                                    
                                        <div class="card">
                                        <div class="card-body">
                                            <label class="form-label">{{label}}</label>
                                            <select class="form-select">{{text}}</select>
                                        </div>                                    
                                    </div>                                
                                </div>
                                {{/each}}
                            </div>
                        </div>                        
                        {{/with}}
                        
                        <hr class="mt-3 mb-3">
                       
                        {{!-- Delivery type --}}
                        {{#each delivery.delivery_type}}
                        <div class="col">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <div><label class="form-check-label">{{type}}</label></div>
                                <div class="text-end">{{value}}</div>                                
                            </div>
                        </div>
                        {{/each}}

                        <hr class="mt-3 mb-3">
                       
                        {{!-- Payment type --}}
                        {{#each delivery.payment}}
                        <div class="col">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input">
                                <div><label class="form-check-label">{{type}}</label></div>
                                <div>{{description}}</div>                                
                            </div>
                        </div>
                        {{/each}}

                        <hr class="mt-3 mb-3">
                       
                        {{!-- Contact --}}
                        {{#with delivery}}
                        {{#with contact}}
                        <div class="col-12">
                    <div class="row">                                      
                       <div class="h4">{{title}}</div>
                        <div class="col-6">                             
                            <div class="mb-3">                            
                                <label class="form-label">{{surname.label}}</label>
                                <input class="form-control"placeholder="{{surname.placeholder}}">
                                    <div class="form-text">{{surname.caption}}</div>                            
                            </div>                        
                                                        
                        </div>

                        <div class="col-6">                                                        
                            <div class="mb-3">
                                <label class="form-label">{{name.label}}</label>
                                <input class="form-control" placeholder="{{name.placeholder}}">
                                    <div class="form-text">{{name.caption}}</div>
                            </div>
                        </div> 
                        
                        <div class="col-6">                                                        
                            <div class="mb-3">
                                <label class="form-label">{{phone.label}}</label>
                                <input class="form-control" placeholder="{{phone.placeholder}}">
                                    <div class="form-text">{{phone.caption}}</div>
                            </div>
                        </div> 

                        <div class="col-6">                                                        
                            <div class="mb-3">
                                <label class="form-label">{{email.label}}</label>
                                <input class="form-control" placeholder="{{email.placeholder}}">
                                    <div class="form-text">{{email.caption}}</div>
                            </div>
                        </div>
                        {{/with}}
                        
                        <hr class="ms-2 mt-3 mb-3">

                        {{!-- Comment --}}                        
                        {{#with coment}}
                        <div class="col">
                            <label class="form-label">{{label}}</label>
                        </div>
                        {{/with}}
                        

                        {{/with}}
                        <hr class="ms-2 mt-3 mb-3">
                        
                                             
                       
                        
                    </div>
                </div>
            </div>         
        </div>
    </div>    

</main>

<aside class="row">
        {{!-- Action block --}}
            <div class="col-4">
                <div class="card mb-3">
                    <div class="card-body">
                        {{#each action_block}}
                        {{#if isPrimary}}
                        <div class="mb-2"><a type="button" class="btn btn-success">{{text}}</a></div>
                        {{/if}}
                        {{#if isDanger}}
                        <div class="mb-2"><a type="button" class="btn btn-danger">{{text}}</a></div>
                        {{/if}}
                         {{#if isInfo}}
                        <div><a type="button" class="btn btn-info text-light">{{text}}</a></div>
                        {{/if}}
                        {{/each}}
                    </div>
                </div>
                {{!-- Total block --}}
                <div class="col">
                    <div class="card">
                        <div class="h5 ps-3 pt-2">{{total.title}}</div>
                        <div class="card-body">
                            <div>
                                {{#each total.item_list}}
                                <p>{{name}}: {{price}}</p>
                                {{/each}}
                            </div>
                            <hr>
                            <div>
                                {{#each total.additional_info}}
                                <p>{{text}}: {{value}}</p>
                                {{/each}}
                            </div>
                            <hr>
                            <div>
                                <p>{{total.total_price.text}}: {{total.total_price.value}}</p>
                            </div>
                            <hr>
                            <div class="row g-2">
                                <div class="col">
                                {{#each total.button}}
                                {{#if isPrimary}}
                                <div class="mb-2"><a type="button" class="btn btn-primary">{{text}}</a></div>
                                {{else}}
                                <div><a type="button" class="btn btn-outline-info">{{text}}</a></div>
                                {{/if}}
                                {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </aside>

<hr class="mt-5">
<div class="row">
    {{> shopfooter}}
</div> 