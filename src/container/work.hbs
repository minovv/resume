{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<main>
    {{#with main}}
    <div class="row g-5">
        <div class=" card col-12 p-0">
           <div class="card-header">
             {{> title data='Work Experience' big=true}} 
           </div>         
           <div class="mt-4">
                <ul>
                    {{#each experience}}
                    <li>
                        <div>{{position}}</div>
                        <br>

                        <div>
                            {{duration.from}} - 
                            {{#if duration.to}} 
                            {{duration.to}}
                            {{else}}
                            <span class="badge rounded-pill text-bg-info text-light">untill now</span>
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <div><b>{{company.name}}</b></div>
                            {{/if}}
                        </div>

                        <br>
                        <br>

                        <div>
                            <strong>Projects: 
                                <span class="badge rounded-pill text-bg-info text-light">{{projectAmount}}</span>
                            </strong>
                        </div>

                        <br>

                        <div>
                            <ul>
                                {{#each projects}}
                                <li><div>Project Name: {{name}}</div></li>
                                    <div> URL: {{> link text=name href=url blank=true noLine=true}}</div>
                                    <div>
                                        <p>Description: {{about}}</p>
                                    </div>
                                    <br>
                                    <ul>
                                    <div><em>Project stacks
                                        <span class="badge rounded-pill text-bg-info text-light">{{stackAmount}}</span>
                                         </em>
                                    </div>
                                    <br>
                                    {{#each stacks}}
                                    <li><div>{{name}}</div></li>
                                    {{/each}}
                                     </ul>
                                    <br>
                                   

                                    <ul>
                                    <div><em>Project Awards
                                        <span class="badge rounded-pill text-bg-info text-light">{{awardAmount}}</span>
                                        </em>
                                    </div>
                                    <br>
                                    {{#each awards}}
                                   <li><div>{{name}}</div></li>
                                    {{/each}}
                                    </ul>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    <br>
                    {{/each}}
                </ul>
                
            </div>
        </div>

    </div>
    </div>
    {{/with}}    
</main>

