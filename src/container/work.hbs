{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with main}}
    <main>
        <div>
            {{> title data='Work Experience' big=true}}          
           <div>
                <ul>
                    {{#each experience}}
                    <li>
                        <div>{{position}}</div>
                        <br>

                        <div>
                            {{duration.from}} - 
                            {{#if duration.to}} 
                            {{duration.to}}
                            {{else}}
                            (untill now)
                            {{/if}}
                        </div>

                        <br>

                        <div>
                            {{#if company.url}}
                            {{> link text=company.name href=company.url blank=true noLine=true}}
                            {{else}}
                            <div><b>{{company.name}}</b></div>
                            {{/if}}
                        </div>

                        <br>
                        <br>

                        <div>
                            <strong>Projects: ({{projectAmount}})</strong>
                        </div>

                        <br>

                        <div>
                            <ul>
                                {{#each projects}}
                                <li><div>Project Name: {{name}}</div></li>
                                    <div> URL: {{> link text=name href=url blank=true noLine=true}}</div>
                                    <div>
                                        <p>Description: {{about}}</p>
                                    </div>
                                    <br>
                                    <ul>
                                    <div><em>Project stacks ({{stackAmount}})</em></div>
                                    <br>
                                    {{#each stacks}}
                                    <li><div>{{name}}</div></li>
                                    {{/each}}
                                     </ul>
                                    <br>
                                   

                                    <ul>
                                    <div><em>Project Awards ({{awardAmount}})</em></div>
                                    <br>
                                    {{#each awards}}
                                   <li><div>{{name}}</div></li>
                                    {{/each}}
                                    </ul>
                                {{/each}}
                            </ul>
                        </div>
                    </li>
                    <br>
                    {{/each}}
                </ul>
                
            </div>
        </div>

    </div>
    </main>
    {{/with}}    
</div>

