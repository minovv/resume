<div class="col-12 pt-3 pb-3">
                {{#each goodsBlock}}
                    <div class="card mb-3">
                        <div class="row card-body">
                            <img class="col-2" src="{{image}}" alt="{{name}}">
                            <div class="col-4">
                                <div>
                                    <div class="col-12 h5">{{name}}</div>
                                    
                                    <div class="col-12">{{description}}</div>
                                </div>                                
                            </div>
                            <div class="col-3">
                                <div>
                                    
                                    <div class="row-12 h6 text-center p-3">{{price.title}}: </div>
                                    <div class="row-12 h6 text-center">{{price.value}}</div>
                                    
                                </div>
                            </div>
                            
                            <div class="col-1 h6 p-4">{{amount}}</div>

                            <div class="col-2">
                                <div>
                                    
                                    <div class="col-12">
                                        <div class="row">
                                            {{#each buttons}}
                                                <div class="row g-2">
                                                    {{#if isPrimary}}
                                                        <button class="btn btn-primary">{{text}}</button>
                                                    {{else}}
                                                        <button class="btn btn-outline-danger">{{text}}</button>
                                                    {{/if}}
                                                    
                                                </div>
                                            {{/each}}
                                            
                
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>                
            </div>
            {{/each}}