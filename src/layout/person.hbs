{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
    {{#with person}}
    <main>
        <div>
        {{> title data='Person' big=true}}
        <br>
        <div><h2>{{name}}</h2></div>
        <div>Age: {{age}}</div>
        <div>Sex: {{gender}}</div>
        <br>
        <div> 
            <b>Address:</b>
            {{#with address}}
            <address>
                <div>{{street}}</div>
                <div>{{city}}, {{state}} - {{zip}} / {{country}} </div>
            </address>
            {{/with}}
        </div>
        <hr>       
        </div>               
</div>
{{/with}} 

